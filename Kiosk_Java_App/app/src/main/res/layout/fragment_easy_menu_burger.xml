<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyMenuBurger">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_bigmac"
                    android:scaleType="centerCrop"
                    android:id="@+id/bigmac"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_bulgogi"
                    android:scaleType="centerCrop"
                    android:id="@+id/bulgogi"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(기본 햄버거)"
                    android:textSize="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(불고기 버거)"
                    android:textSize="50dp"
                    android:layout_marginLeft="110dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_burger"
                    android:id="@+id/burger"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_crispyoriental"
                    android:id="@+id/crispyoriental"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(기본 베이컨 햄버거)"
                    android:textSize="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(바삭 치킨 버거)"
                    android:textSize="50dp"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_doublebulgogi"
                    android:id="@+id/doublebulgogi"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_goldenpotato"
                    android:id="@+id/goldenpotato"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(불고기 2장 버거)"
                    android:textSize="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(감자 치즈버거)"
                    android:textSize="50dp"
                    android:layout_marginLeft="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_macspicyshanghai"
                    android:id="@+id/macspicyshanghai"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_quaterpounder"
                    android:id="@+id/quaterpounder"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="53dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(매콤 닭가슴살 버거)"
                    android:textSize="39dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(큰 치즈버거)"
                    android:textSize="50dp"
                    android:layout_marginLeft="80dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/burger_supremeshrimp"
                    android:id="@+id/supremeshrimp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(새우 버거)"
                    android:textSize="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>