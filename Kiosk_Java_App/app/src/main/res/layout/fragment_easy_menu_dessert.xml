<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyMenuDessert">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_icecream"
                    android:scaleType="centerCrop"
                    android:id="@+id/icecream"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_chocolate"
                    android:scaleType="centerCrop"
                    android:id="@+id/chocolate"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="120dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(아이스크림)"
                    android:textSize="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(초코아이스크림)"
                    android:textSize="40dp"
                    android:layout_marginLeft="130dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_strawberry"
                    android:scaleType="centerCrop"
                    android:id="@+id/strawberry"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_oreo"
                    android:scaleType="centerCrop"
                    android:id="@+id/oreo"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="90dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(딸기아이스크림)"
                    android:textSize="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(오레오아이스크림)"
                    android:textSize="40dp"
                    android:layout_marginLeft="90dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_chocooreo"
                    android:scaleType="centerCrop"
                    android:id="@+id/chocooreo"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_strawberryoreo"
                    android:scaleType="centerCrop"
                    android:id="@+id/strawberryooreo"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(초코오레오아이스크림)"
                    android:textSize="35dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(딸기오레오아이스크림)"
                    android:textSize="35dp"
                    android:layout_marginLeft="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_verystrawberry"
                    android:scaleType="centerCrop"
                    android:id="@+id/verystrawberry"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/dessert_hersheypretzel"
                    android:id="@+id/hersheypretzel"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(딸기추가오레오아이스크림)"
                    android:textSize="33dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(초코과자아이스크림)"
                    android:textSize="35dp"
                    android:layout_marginLeft="35dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>