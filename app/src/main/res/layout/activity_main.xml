<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mcdonald"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generalmenu"
        android:layout_below="@id/mcdonald"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:text="일반 주문"
        android:textSize="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#F14b4b"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@id/generalmenu"
        android:id="@+id/easymenu"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:text="간편 주문"
        android:textSize="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="#0476D1"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="현재 조리 시간: 6분"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"/>

</RelativeLayout>